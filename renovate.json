{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["on the first day of the month"],
  "groupName": "all-dependencies",
  "groupSlug": "all",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all-dependencies",
      "groupSlug": "all"
    }
  ],
  "prCreation": "not-pending",
  "prHourlyLimit": 1,
  "prConcurrentLimit": 1,
  "automerge": false
}
